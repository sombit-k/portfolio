generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Project {
  id          Int      @id @default(autoincrement())
  title       String
  slug        String   @unique
  description String
  githubUrl   String?
  liveUrl     String?
  createdAt   DateTime @default(now())
}

model BlogPost {
  id        Int      @id @default(autoincrement())
  title     String
  slug      String   @unique
  excerpt   String?
  content   String
  published Boolean  @default(false)
  createdAt DateTime @default(now())
}

model ContactMessage {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
}